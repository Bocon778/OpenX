<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="../../Styles/Global.css">
    <title>OpenX Dashboard</title>
</head>

<body class="font-sans bg-gray-900 text-white flex flex-col h-screen">
    <header class="bg-gray-800 p-4">
        <div class="container mx-auto flex items-center justify-between">
            <a href="/">
                <h1 class="text-3xl font-extrabold text-yellow-400">OpenX</h1>
            </a>
        </div>
    </header>

    <div class="flex-1 flex overflow-hidden">
        <aside class="w-1/6 h-screen bg-gray-800 text-white overflow-y-auto">
            <nav class="p-4">
                <ul>
                    <a href="/dashboard" class="text-white">
                        <li class="flex items-center p-3 hover:bg-gray-700 transition duration-300 rounded-md">
                            <i class="fas fa-home text-xl mr-2"></i>
                            <span class="ml-2 text-lg">Home</span>
                        </li>
                    </a>
                    <a href="/dashboard/files" class="text-white">
                        <li class="flex items-center p-3 hover:bg-gray-700 transition duration-300 rounded-md">
                            <i class="fas fa-file-alt text-xl mr-2"></i>
                            <span class="ml-2 text-lg">&nbsp;Files</span>
                        </li>
                    </a>
                    <a href="/api/logout" class="text-white">
                        <li class="flex items-center p-3 mt-auto hover:bg-gray-700 transition duration-300 rounded-md">
                            <i class="fas fa-sign-out-alt text-xl mr-2"></i>
                            <span class="ml-2 text-lg">Logout</span>
                        </li>
                    </a>
                </ul>
            </nav>
        </aside>

        <main class="flex-1 p-8 bg-gray-900 overflow-y-auto rounded-tl-lg">
            <div class="bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 p-8 rounded-md shadow-md space-y-6">
                <h2 class="text-3xl font-extrabold mb-4 text-blue-400">Welcome To OpenX Dashboard</h2>

                <div class="flex flex-col md:flex-row md:space-x-4">
                    <!-- File Count Box -->
                    <div class="flex-1 mt-6 p-4 bg-gray-800 rounded-md shadow-md">
                        <h3 class="text-lg font-semibold text-yellow-400 mb-2">File Count</h3>
                        <p class="text-gray-300">Total Files: <span id="fileCount" class="text-yellow-400">Loading...</span></p>
                    </div>

                    <!-- Space Used Box -->
                    <div class="flex-1 mt-6 p-4 bg-gray-800 rounded-md shadow-md">
                        <h3 class="text-lg font-semibold text-yellow-400 mb-2">Space Used</h3>
                        <p class="text-gray-300">Total Space: <span id="spaceUsed" class="text-yellow-400">Loading...</span></p>
                    </div>
                </div>
            </div>

            <script>
                fetch('/api/file-count')
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('fileCount').innerText = data.numberOfFiles;
                    })
                    .catch(error => console.error('Error Fetching File Count:', error));

                fetch('/api/space-used')
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('spaceUsed').innerText = data.spaceUsed;
                    })
                    .catch(error => console.error('Error Fetching Space Used:', error));
            </script>
        </main>
    </div>
</body>

</html>
