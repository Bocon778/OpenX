<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="../../Styles/Global.css">
    <style>
        ::webkit-scrollbar {
            width: 12px;
        }

        ::webkit-scrollbar-track {
            background: transparent;
        }

        ::webkit-scrollbar-thumb {
            background-color: transparent;
            border-radius: 6px;
            border: 3px solid transparent;
        }

        ::webkit-scrollbar-thumb:hover {
            background-color: transparent;
        }
    </style>
    <title>Dashboard - Files</title>
</head>

<body class="font-sans bg-gray-900 text-white flex flex-col h-screen">
    <header class="bg-gray-800 p-4">
        <div class="container mx-auto flex items-center justify-between">
            <a href="/">
                <h1 class="text-3xl font-extrabold text-yellow-400">OpenX</h1>
            </a>
        </div>
    </header>

    <div class="flex-1 flex overflow-hidden">
        <aside class="w-1/6 h-screen bg-gray-800 text-white overflow-y-auto">
            <nav class="p-4">
                <ul>
                    <a href="/dashboard" class="text-white">
                        <li class="flex items-center p-3 hover:bg-gray-700 transition duration-300 rounded-md">
                            <i class="fas fa-home text-xl mr-2"></i>
                            <span class="ml-2 text-lg">Home</span>
                        </li>
                    </a>
                    <a href="/dashboard/files" class="text-white">
                        <li class="flex items-center p-3 hover:bg-gray-700 transition duration-300 rounded-md">
                            <i class="fas fa-file-alt text-xl mr-2"></i>
                            <span class="ml-2 text-lg">&nbsp;Files</span>
                        </li>
                    </a>
                    <a href="/api/logout" class="text-white">
                        <li class="flex items-center p-3 mt-auto hover:bg-gray-700 transition duration-300 rounded-md">
                            <i class="fas fa-sign-out-alt text-xl mr-2"></i>
                            <span class="ml-2 text-lg">Logout</span>
                        </li>
                    </a>
                </ul>
            </nav>
        </aside>

        <main class="flex-1 p-8 bg-gradient-to-r from-gray-900 via-gray-900 to-black overflow-y-auto max-h-screen">
            <div class="bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900 p-8 rounded-md shadow-md">
                <h2 class="text-3xl font-extrabold mb-4 text-blue-400">Files</h2>
                <div id="mediaList" class="grid grid-cols-3 gap-4"></div>
            </div>

            <script>
                // Fetch and display media files
                fetch('/api/media')
                    .then(response => response.json())
                    .then(data => {
                        const mediaListElement = document.getElementById('mediaList');
                        data.forEach(file => {
                            const mediaItem = document.createElement('div');
                            mediaItem.className = 'p-4 bg-gray-800 rounded-md shadow-md';

                            // Check if the file is an image or video
                            const isImage = /\.(png|jpe?g|gif)$/i.test(file);
                            const isVideo = /\.mp4$/i.test(file);

                            if (isImage) {
                                const image = document.createElement('img');
                                image.src = `/raw/i/${encodeURIComponent(file)}`;
                                image.alt = 'Image';
                                image.className = 'max-w-full max-h-full';
                                mediaItem.appendChild(image);
                            } else if (isVideo) {
                                const video = document.createElement('video');
                                video.src = `/raw/${encodeURIComponent(file)}`;
                                video.controls = true;
                                video.className = 'max-w-full max-h-full';
                                mediaItem.appendChild(video);
                            } else {
                                const link = document.createElement('a');
                                link.href = file;
                                link.textContent = file;
                                mediaItem.appendChild(link);
                            }

                            mediaListElement.appendChild(mediaItem);
                        });
                    })
                    .catch(error => console.error('Error fetching media files:', error));
            </script>
        </main>
    </div>
</body>

</html>
